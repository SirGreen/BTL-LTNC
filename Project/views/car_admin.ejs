            <div id="AddCarForm" class="portfolio container-fluid text-center">
                <% if (information) { %>
                  <%=information%>
                <%}%>
                
            <div id="formContainer" class="modal">

                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close" onclick="hideForm(event)">&times;</span>
                    <form class="m-auto text-left" style="max-width: 500px"  method="post" novalidate="" id="myForm">
                        <!-- Các trường form ở đây -->
                        <h2>Car Information</h2>
                        <div class="form-group">
                            <label class="w-100"> Brand:
                                <input class="form-control" type="text" id="Carbrand" name="CarType"
                                    placeholder="Brand"></label>
                        </div>

                        <div class="form-group">
                            <label class="w-100">Type of Fuel:
                                <input class="form-control" type="text" id="FuelType" name="FuelType"
                                    placeholder="Pedrol" value="Pedrol"></label>
                        </div>
                        <div class="form-group">
                            <label class="w-100">Capacity:
                                <input class="form-control" type="number" placeholder="4" id="Capacity"
                                name="Capacity"></label>
                        </div>
                        <div class="form-group">
                            <label class="w-100">Size:
                                <input class="form-control" type="number" placeholder="7" id="Size"
                                name="Size"></label>
                        </div>

                        <div class="form-group">
                            <label class="w-100">License:
                                <input class="form-control" type="text" id="Num" name="Num"
                                    placeholder="Plate Number"></label>
                        </div>

                        <div class="form-group">
                            <label class="w-100"> Vehicle Status:<br>
                                <input type="radio" id="option1" name="option" value="Active">
                                <label for="option1">Active</label>
                                
                                <input type="radio" id="option2" name="option" value="UnderMaintainance">
                                <label for="option2">Under Maintainance</label>
                                
                                <input type="radio" id="option3" name="option" value="NotActive">
                                <label for="option3">Not  Active</label>
                            </label>
                        </div>

                        <!-- <div class="form-group">
