<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CAR MANAGEMENT</title>
  <link rel="shortcut icon" href="images/favicon2.ico" type="image/x-icon">
  <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="assets/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="css/style.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
  <!-- <script src="js/script_create.js"></script> -->

  <script src="js/web.js"></script>
  <script src="js/addjour.js"></script>
  <style>
    /* Style to remove border from iframe */
    iframe {
      border: none;
    }
  </style>
</head>

<body>
  <script src="js/header.js" defer></script>
  <div id="header-placeholder"></div>
  <section>
    <iframe src="map.html" width="100%" height="900px" style="overflow: hidden; border: none;"></iframe>




    <% if (information) { %>
      <p style="color: red; font-size: 20px; margin-left: 220px">
        <%= information %>
      </p>

      <% } %>


  </section>
  <main>
    <!--  -->
    <section id="driver_journey">
      <div class="portfolio container-fluid text-center">
       
        <h1>JOURNEY</h1>
        <button onclick="showmodal()">
         Income
        </button>
        <div class="overlay" id="overlay"></div>
        <div class="modal" id="IncomeBox">
          
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
    
                    <div class="modal-header">
                        <h1 class="modal-title">Income</h1>
                        <button onclick="hidemodal(event)">x</button>
                    </div>
    
                    <div class="modal-body" id="incomeShow">

                    </div>
                </div>
            </div>
        
        </div>

        <div class="container-fluid text-center">
          <div class="container-fluid px-0 my-5">
            <div class="d-flex justify-content-between">
              <div class="box p-5 border flex-grow-1">
                <!-- Nội dung -->



                <!-- <button onclick="showForm()" id="modalForm">+</button> -->

                <div class="addTrip">
                  <h1 class="text-center">Current Trip</h1>
                  <ul id="List-container">

                  </ul>
                </div>
              </div>
            </div>
            <div class="box p-5 border flex-grow-1">
              <!-- Nội dung -->

              <h1 class="text-center">Completed Trip</h1>
              <div class="addTrip">
                <ul id="CList-container"></ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </section>
    <!-- CONTACT -->
    <section id="contact">
      <div class="contact container-fluid">
        <h2>Contact Us</h2>
        <div class="row">
          <!-- Left column -->
          <div class="col-lg-6">
            <form action="/admin">
              <div class="row">
                <div class="col-lg-6">
                  <input type="text" name="name" required placeholder="Your name" class="form-control" />
                </div>
                <div class="col-lg-6">
                  <input type="email" name="email" required placeholder="Your email" class="form-control" />
                </div>
                <div class="col-lg-12">
                  <textarea name="message" cols="30" rows="10" required placeholder="Your message"
                    class="form-control"></textarea>
                </div>
                <div class="col-lg-12 text-right">
                  <button onclick="NewTrip()">SUBMIT</button>
                </div>
              </div>
            </form>
          </div>

          <!-- Right column -->
          <div class="col-lg-6">
            <h3>INFORMATION</h3>
            <address>
              <i class="fa-solid fa-location-dot"></i>
              <span>
                BKHCM University <br>
                268 Ly Thuong Kiet <br>
                District 11, TPHCM
              </span>

            </address>

            <p>
              <i class="fa-solid fa-envelope"></i>
              info@5anhem.com
            </p>
          </div>

        </div>
      </div>
    </section>
  </main>
  <footer>
    <div class="container-fluid">
      <span>BTL_LTNC 5 anh em siêu nhân | CAR MANAGEMENT </span>
    </div>
    <a href="#" class="back-to-top">
      <i class="fa-solid fa-angle-up"></i>
    </a>
  </footer>
  <script src="assets/jquery.min.js"></script>
  <script src="assets/popper.min.js"></script>
  <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>